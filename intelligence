    const renderer = new THREE.WebGLRenderer({ antialias: true });
    renderer.setSize(320, 240);
    document.getElementById('avatar-3d').appendChild(renderer.domElement);

    const geometry = new THREE.BoxGeometry();
    const material = new THREE.MeshPhongMaterial({ color: 0x2575fc, shininess: 100 });
    const cube = new THREE.Mesh(geometry, material);
    scene.add(cube);

    const light = new THREE.PointLight(0xffffff, 1.3);
    light.position.set(2, 3, 4);
    scene.add(light);

    camera.position.z = 3;

    function animate() {
      requestAnimationFrame(animate);
      cube.rotation.y += 0.018;
      cube.rotation.x += 0.007;
      renderer.render(scene, camera);
    }
    animate();
